// VARIABLES
// =========================

//Colors
$gray-color = rgb(46, 57, 62)
$light-gray = #B8B8B8
$green = rgb(109,215,105)
$blue = rgb(115,205,204)
$red = rgb(254,73,83)
$yellow = rgb(253,251,94)
$orange = #FF9800
$white = #fff
$dark-green = #0C6F10
$dark-red = #87133B
$dark-blue = #3F51B5

//Borders
$white-border = 5px solid snow
$white-medium-border = 3px solid #fff
$gray-medium-border = 3px solid $light-gray

//Shadows
$box-shadow-dark = 0 0 20px rgb(161, 161, 161)
$box-shadow-medium = 0 1px 10px rgb(102, 102, 102)
$square-shadow = 0 0 10px rgb(168, 168, 168)



/*******************************
  LAYOUT
*******************************/
html
  font-size 16px

body
  font-family "Lato", helvetica, serif
  color $light-gray

.main-container
  width 960px
  margin 0 auto
  text-align center

.board-container
  width 420px
  margin 0 auto
  padding 2.5%


/*******************************
  MISC
*******************************/
h1
  margin 0
  font-size 4em

/*******************************
  SQUARES
*******************************/
.square
  margin 5.5px
  width 175px
  height 175px
  display inline-block
  border-radius 100%
  transition box-shadow .25s ease-in-out

#green
  background-color $green
  border 5px solid $dark-green
  &:hover
    box-shadow inset 0px 0px 40px $dark-green
#blue
  background-color $blue
  border 5px solid $dark-blue
  &:hover
    box-shadow inset 0px 0px 40px $dark-blue
#red
  background-color $red
  border 5px solid $dark-red
  &:hover
    box-shadow inset 0px 0px 40px $dark-red
#yellow
  background-color $yellow
  border 5px solid $orange
  &:hover
    box-shadow inset 0px 0px 40px $orange


/*******************************
  BUTTONS CONTAINER
*******************************/
.buttons-container
  font-size 1rem
  margin 0
  #challenge_mode
    display block
    margin 10px auto
  button
  #level
    color $light-gray
    font-size 1em
    border-radius 5px
    border $gray-medium-border
    background none
    padding 1%
  button
    transition background .25s ease-in-out
  button:active
    box-shadow inset 0px 1px 5px black
  #level
    width 5%
    margin 5px auto
    font-size 2.5em


/*******************************
  TEXT CONTAINER
*******************************/
.rules
  margin 40px 0
  padding 0 150px
  h2
  p
    text-align left
    line-height 1.75em
  h2
    font-size 2em
  p
    font-size 1em


/*******************************
 BUTTON TRANSITIONS
*******************************/
#start:hover
  background $green
  color #fff

#reset:hover
  background $red
  color #fff

#challenge_mode:hover
  background $blue
  color #fff
