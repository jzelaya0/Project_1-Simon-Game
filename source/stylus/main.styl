// VARIABLES
// =========================

//Colors
$backgroud = rgb(46, 57, 62)
$gray-color = rgb(46, 57, 62)
$green = rgb(109,215,105)
$blue = rgb(115,205,204)
$red = rgb(254,73,83)
$yellow = rgb(253,251,94)
$white = #fff

//Borders
$white-border = 5px solid snow
$white-medium-border = 3px solid #fff

//Shadows
$box-shadow-dark = 0 0 20px rgb(161, 161, 161)
$box-shadow-medium = 0 1px 10px rgb(102, 102, 102)
$square-shadow = 0 0 10px rgb(168, 168, 168)



/*******************************
  LAYOUT
*******************************/
body
  font-family "Lato", helvetica, serif
  font-size 16px
  background-color rgb(68, 86, 94)
  color #fff

.main-container
  width 960px
  margin 0 auto
  text-align center

.board-container
  width 420px
  height 420px
  margin 20px auto
  background-color $backgroud
  border-radius 30px
  border $white-border
  padding 10px
  box-shadow $box-shadow-dark


/*******************************
  MISC
*******************************/
h1
  margin 0
  font-size 5em

h2
p
  text-align left
  line-height 35px


/*******************************
  BUTTONS CONTAINER
*******************************/
.buttons-container
  margin 20px 0
  #level
    width 50px
    height 50px
    margin 5px auto
    font-size 2.5em
  #challenge_mode
    display block
    margin 10px auto
  #level
  #start
  #reset
  #challenge_mode
    border none
    border-radius 10px
    border 3px solid white
    border $white-medium-border
    color #fff
    background-color $gray-color
    box-shadow $box-shadow-medium


.rules
  margin 40px 0
  padding 0 150px

/*******************************
  SQUARES
*******************************/
.square
  margin 5.5px
  width 190px
  height 190px
  display inline-block
  border-radius 40px
  border $white-medium-border
  box-shadow $square-shadow

#green
  background-color $green
#blue
  background-color $blue
#red
  background-color $red
#yellow
  background-color $yellow
