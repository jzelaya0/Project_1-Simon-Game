#overlay
  background #000
  position fixed
  width 100%
  height 100%
  opacity .35
  top 0
  left 0

#modal
  background $modal-red
  position absolute
  width 80%
  top 10%
  left 0
  right 0
  margin-left auto
  margin-right auto
  padding 10% 0
  font-size 2.5em
  box-shadow 0px 0px 20px $gray-color
  #modal-content
    text-align center
    width 80%
    margin 0 auto
    color #fff
    #modal-close
      position absolute
      font-size 1em
      top 2.5%
      right 2.5%
      padding 5px
      transition transform .25s ease-in-out
      &:hover
        transform scale(1.25)
