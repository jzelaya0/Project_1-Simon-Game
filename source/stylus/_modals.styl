#overlay
  background #000
  position fixed
  width 100%
  height 100%
  opacity .5
  top 0
  left 0

#modal
  background $light-gray
  position absolute
  width 80%
  top 10%
  left 0
  right 0
  margin-left auto
  margin-right auto
  border-radius 10px
  padding 10% 0
  font-size 2.5em
  color #fff
  #modal-content
    text-align center
    width 80%
    margin 0 auto
    #modal-close
      position absolute
      font-size 1.75em
      top 5px
      right 5px
      padding 5px
